<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="linix.example.com.robotcontrol.MainActivity"
    android:background="@drawable/robot_image"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/button_left"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageBack"
        android:layout_alignTop="@+id/imageLeft"
        android:layout_toRightOf="@+id/imageLeft"
        android:layout_toEndOf="@+id/imageLeft"
        android:src="@drawable/button_down"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="18000dp"
        android:id="@+id/imageRight"
        android:layout_alignTop="@+id/imageBack"
        android:layout_toRightOf="@+id/imageBack"
        android:layout_toEndOf="@+id/imageBack"
        android:src="@drawable/button_right"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageForward"
        android:src="@drawable/button_up"
        android:scaleType="fitXY"
        android:layout_above="@+id/imageBack"
        android:layout_alignLeft="@+id/imageBack"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/imageCamera"
        android:src="@drawable/nocapture"
        android:longClickable="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/radioGroup"
        android:layout_alignRight="@+id/imageCamera"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEG 5"
            android:id="@+id/speed5"
            android:layout_alignTop="@+id/imageRight"
            android:layout_centerHorizontal="true"
            android:checked="true"
            android:textSize="14dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEG 4"
            android:id="@+id/speed4"
            android:textSize="14dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEG 3"
            android:id="@+id/speed3"
            android:textSize="14dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEG 2"
            android:id="@+id/speed2"
            android:textSize="14dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIEG 1"
            android:id="@+id/speed1"
            android:textSize="14dp" />

    </RadioGroup>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="250dp"
        android:id="@+id/imageSpeed"
        android:layout_alignParentTop="true"
        android:src="@drawable/speed0"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="2dp" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/imageConnect"
        android:src="@drawable/start"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamera IP"
        android:id="@+id/switchCamera"
        android:layout_below="@+id/imageCamera"
        android:layout_alignLeft="@+id/imageCamera"
        android:layout_alignStart="@+id/imageCamera"
        android:textStyle="bold"
        android:layout_alignRight="@+id/imageCamera"
        android:layout_alignEnd="@+id/imageCamera"
        android:maxHeight="28dp"
        android:layout_marginTop="10dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tryb AUTO"
        android:id="@+id/switchAutoRobot"
        android:layout_below="@+id/switchCamera"
        android:layout_alignLeft="@+id/switchCamera"
        android:layout_alignStart="@+id/switchCamera"
        android:textStyle="bold"
        android:layout_alignRight="@+id/switchCamera"
        android:layout_alignEnd="@+id/switchCamera" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/animView"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginRight="150dp"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/batteryView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/battery_full"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/msgView"
        android:layout_below="@+id/switchAutoRobot"
        android:layout_alignLeft="@+id/switchAutoRobot"
        android:layout_alignStart="@+id/switchAutoRobot"
        android:textAlignment="center"
        android:layout_alignRight="@+id/switchCamera"
        android:layout_alignEnd="@+id/switchCamera" />

</RelativeLayout>
